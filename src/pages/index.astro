---
import Layout from "../layouts/layout.astro";
import HeaderComponent from "../components/HeaderComponent.jsx";
import CarouselComponent from "../components/CarouselComponent.jsx";
import TechSection from "../components/TechSection.jsx";
import DownloadSection from "../components/DownloadSection.jsx";
---

<Layout>
  <!-- Sección 1 -->
  <section
    id="home"
    class="bg-[url(/city.png)] bg-no-repeat bg-cover bg-center bg-black/25 bg-blend-multiply text-white w-full h-screen flex flex-col p-0"
  >
    <div>
      <div>
        <img
          class="absolute w-auto h-20 top-2.5 left-2.5 z-0"
          src="/logo.png"
          alt="Logo"
        />
      </div>
      <div><HeaderComponent client:load /></div>
    </div>
    <div
      class="w-full flex flex-col justify-center items-center h-auto absolute top-1/2 -translate-y-1/2 z-0"
    >
      <h1 class="text-7xl font-bold">NOMBRE DEL JUEGO</h1>
      <p class="text-[18px] font-light">Descripción del juego</p>
    </div>
  </section>

  <!-- Sección 2 -->
  <section
    class="bg-[url(/fondo.png)] bg-no-repeat bg-cover bg-center text-white w-full h-screen flex flex-col pt-30"
    id="about"
  >
    <h1 class="text-4xl font-bold text-center">¡Completa distintos niveles!</h1>
    <CarouselComponent client:load />
  </section>

  <!-- Sección 3 (Tecnologías) -->
  <section id="tech">
    <TechSection client:load />
  </section>
  <section id="download">
    <!-- Sección 4 (Descarga con animaciones) -->
    <DownloadSection client:load />
  </section>
</Layout>
